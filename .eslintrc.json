{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "@ecomfe/eslint-config/strict",
        "@ecomfe/eslint-config/typescript/strict"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "dot-notation": "warn",
        "no-console": "warn",
        "no-unused-vars": "warn",
        "new-cap": "warn",
        "operator-linebreak": "warn",
        "comma-dangle": "warn"
    }
}
